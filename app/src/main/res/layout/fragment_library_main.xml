<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/linearLayout_main_menu_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_padding"
    android:background="?android:colorBackground"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_library_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/library"
            android:layout_gravity="center_vertical"
            style="@style/TextAppearance.AppCompat.Title"
            />

        <ImageButton
            android:id="@+id/imageButton_library_main_back"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24"
            android:contentDescription="@string/back"
            app:tint="?attr/colorControlNormal"  />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_library_main_by_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="16dp" >

        <ImageView
            android:id="@+id/imageButton_library_main_by_title"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_marginEnd="16dp"
            
            android:contentDescription="@string/books_by_title"
            app:srcCompat="@drawable/ic_folder_black_24dp" />

        <TextView
            android:id="@+id/textView_library_main_by_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/books_by_title" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_library_main_by_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="16dp" >

        <ImageView
            android:id="@+id/imageButton_library_main_by_author"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_marginEnd="16dp"
            
            android:contentDescription="@string/books_by_author"
            app:srcCompat="@drawable/ic_folder_black_24dp" />

        <TextView
            android:id="@+id/textView_library_main_by_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/books_by_author" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_library_main_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/imageButton_library_main_settings"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_marginEnd="16dp"
            
            android:contentDescription="@string/settings"
            app:srcCompat="@drawable/ic_baseline_settings_24" />

        <TextView
            android:id="@+id/textView__library_main_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings" />

    </LinearLayout>

</LinearLayout>

