<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_padding"
    android:layout_gravity="bottom"
    android:background="?android:colorBackground"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="@string/color_theme" />

        <Spinner
            android:id="@+id/spinner_quick_menu_themes"
            android:layout_height="@dimen/icon_size"
            android:layout_weight="2"
            android:layout_width="0dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/textsize" />

        <ImageButton
            android:id="@+id/imageView_quick_menU_textSizeDecrease"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            app:srcCompat="@drawable/ic_a_small"
            android:contentDescription="@string/decrease"
            app:tint="?attr/colorControlNormal" />

        <TextView
            android:id="@+id/textView_quick_menU_textSizeExample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/example_abcabc" />

        <ImageButton
            android:id="@+id/imageView_quick_menU_textSizeIncrease"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            app:srcCompat="@drawable/ic_aa"
            android:contentDescription="@string/increase"
            app:tint="?attr/colorControlNormal"  />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="@string/line_spacing" />

        <Spinner
            android:id="@+id/spinner_quick_menu_line_spacing"
            android:layout_width="0dp"
            android:layout_height="@dimen/icon_size"
            android:layout_weight="2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="@string/letter_spacing" />

        <Spinner
            android:id="@+id/spinner_quick_menu_letter_spacing"
            android:layout_width="0dp"
            android:layout_height="@dimen/icon_size"
            android:layout_weight="2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="@string/bookmarks" />

        <ImageButton
            android:id="@+id/imageView_quick_menu_addBookmark"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            app:srcCompat="@drawable/ic_iconmonstr_bookmark_add"
            android:contentDescription="@string/add_bookmark"
            app:tint="?attr/colorControlNormal" />

        <ImageButton
            android:id="@+id/imageView_quick_menu_listBookmark"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            app:srcCompat="@drawable/ic_iconmonstr_bookmark_list2"
            android:contentDescription="@string/bookmarklist"
            app:tint="?attr/colorControlNormal"  />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        >

        <ImageButton
            android:id="@+id/imageButton_quickmenu_bookinfo"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            app:srcCompat="@drawable/ic_iconmonstr_book_info"
            android:contentDescription="@string/bookinfo"
            app:tint="?attr/colorControlNormal"  />

        <androidx.legacy.widget.Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/imageButton_quickmenu_save"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            app:srcCompat="@drawable/ic_baseline_check_24"
            android:contentDescription="@string/save"
            app:tint="?attr/colorControlNormal"  />

        <ImageButton
            android:id="@+id/imageButton_quickmenu_back"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            app:srcCompat="@drawable/ic_baseline_close_24"
            android:contentDescription="@string/back"
            app:tint="?attr/colorControlNormal"  />


    </LinearLayout>

</LinearLayout>