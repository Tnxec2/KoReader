<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/linearLayout_main_menu_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_padding"
    android:background="@color/background_main_dialog"
    android:textColor="@color/foreground_main_dialog"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_settings_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/main_menu"
            android:layout_gravity="center_vertical"
            style="@style/TextAppearance.AppCompat.Title"
            />

        <ImageButton
            android:id="@+id/imageButton_main_menu_back"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            app:srcCompat="@drawable/ic_baseline_close_24"
            android:contentDescription="@string/back" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_main_menu_open_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageButton_main_menu_open_file"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_marginEnd="16dp"
            
            android:contentDescription="@string/openfile"
            app:srcCompat="@drawable/ic_folder_black_24dp" />

        <TextView
            android:id="@+id/textView_main_menu_open_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/openfile"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_main_menu_last_opened"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageButton_main_menu_lastopened"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_marginEnd="16dp"
            
            android:contentDescription="@string/openfile"
            app:srcCompat="@drawable/ic_iconmonstr_book_time" />

        <TextView
            android:id="@+id/textView_main_menu_lastopened"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/last_opened" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_main_menu_library"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageButton_main_menu_library"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_marginEnd="16dp"

            android:contentDescription="Library"
            app:srcCompat="@drawable/baseline_local_library_24" />

        <TextView
            android:id="@+id/textView_main_menu_library"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/library" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_main_menu_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageButton_main_menu_settings"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_marginEnd="16dp"
            
            android:contentDescription="@string/settings"
            app:srcCompat="@drawable/ic_baseline_settings_24" />

        <TextView
            android:id="@+id/textView_main_menu_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings" />

    </LinearLayout>

    <androidx.legacy.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton_mainmenu_bookinfo"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            app:srcCompat="@drawable/ic_iconmonstr_book_info"
            android:contentDescription="@string/bookinfo" />
    </LinearLayout>

</LinearLayout>

