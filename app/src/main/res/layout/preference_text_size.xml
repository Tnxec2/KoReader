<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/imageView_preference_text_textSizeDecrease"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        app:srcCompat="@drawable/ic_a_small"
        android:contentDescription="@string/decrease"
        app:tint="?attr/colorControlNormal"  />

    <TextView
        android:id="@+id/textView_preference_text_sample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="none"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/example_abcabc" />


    <ImageButton
        android:id="@+id/imageView_preference_text_textSizeIncrease"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        app:srcCompat="@drawable/ic_aa"
        android:contentDescription="@string/increase"
        app:tint="?attr/colorControlNormal"  />
</LinearLayout>