<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    android:textColor="@color/foreground_main"
    >

    <RelativeLayout
        android:id="@+id/pageViewHolderOuter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="@dimen/padding_textview_left"
        android:paddingLeft="@dimen/padding_textview_left"
        android:paddingTop="@dimen/padding_textview_top"
        android:paddingEnd="@dimen/padding_textview_right"
        android:paddingRight="@dimen/padding_textview_right"
        android:paddingBottom="@dimen/padding_textview_bottom"
        app:layout_constraintBottom_toTopOf="@+id/ll_infobereich"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/textView_pageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textIsSelectable="true"
            android:text="" />
     </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_infobereich"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingLeft="@dimen/padding_textview_left"
        android:paddingRight="@dimen/padding_textview_right"
>

    <TextView
        android:id="@+id/tv_infotext_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="@string/info" />
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    <TextView
        android:id="@+id/tv_infotext_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/info"
 />
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    <TextView
        android:id="@+id/tv_infotext_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="@string/info"
 />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>