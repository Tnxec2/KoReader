<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE">

    <RelativeLayout
        android:id="@+id/pageViewHolderOuter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/background_main"
        android:paddingLeft="@dimen/padding_textview"
        android:paddingTop="@dimen/padding_textview"
        android:paddingRight="@dimen/padding_textview"
        android:paddingBottom="@dimen/padding_textview_bottom"
        app:layout_constraintBottom_toTopOf="@+id/tv_infotext_left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

     <RelativeLayout
         android:id="@+id/pageViewHolderInner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/padding_textview_inner"
        android:paddingTop="@dimen/padding_textview_inner"
        android:paddingRight="@dimen/padding_textview_inner"
        android:paddingBottom="@dimen/padding_textview_inner"
         android:elevation="2dp"
         android:background="@drawable/myrect"
        >

        <TextView
            android:id="@+id/textView_pageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="PageView" />
     </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_infotext_left"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_infotext_center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_infotext_right"
        app:layout_constraintStart_toEndOf="@id/tv_infotext_left" />

    <TextView
        android:id="@+id/tv_infotext_right"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="Info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>