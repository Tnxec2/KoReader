<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <PreferenceCategory app:title="@string/color_theme1_header" app:iconSpaceReserved="false">

        <com.rarepebble.colorpicker.ColorPreference
            app:key="colorBackTheme1"
            app:title="@string/color_background"
            android:defaultValue="@string/color_theme1_backgroud_default"
            app:colorpicker_showAlpha="false"
            app:iconSpaceReserved="false"
            app:colorpicker_selectNoneButtonText="@string/default_color"
            />
        <com.rarepebble.colorpicker.ColorPreference
            app:key="colorTextTheme1"
            app:title="@string/color_foreground"
            android:defaultValue="@string/color_theme1_foregroud_default"
            app:colorpicker_showAlpha="false"
            app:iconSpaceReserved="false"
            app:colorpicker_selectNoneButtonText="@string/default_color"
            />
        <com.rarepebble.colorpicker.ColorPreference
            app:key="colorLinkTheme1"
            app:title="@string/color_linktext"
            android:defaultValue="@string/color_theme1_linktext_default"
            app:colorpicker_showAlpha="false"
            app:iconSpaceReserved="false"
            app:colorpicker_selectNoneButtonText="@string/default_color"
            />
        <com.rarepebble.colorpicker.ColorPreference
            app:key="colorInfoTheme1"
            app:title="@string/color_infotext"
            android:defaultValue="@string/color_theme1_foregroud_default"
            app:colorpicker_showAlpha="false"
            app:iconSpaceReserved="false"
            app:colorpicker_selectNoneButtonText="@string/default_color"
            />
    </PreferenceCategory>
    <PreferenceCategory app:title="@string/color_theme_backgroundimage_header" app:iconSpaceReserved="false">
        <SwitchPreference
            app:key="backgroundImageEnableTheme1"
            app:title="@string/color_theme_show_background_image"
            android:defaultValue="false"
            app:iconSpaceReserved="false"
            />

        <com.kontranik.koreader.ui.preferences.ImagePickerPreference
            app:key="backgroundImageTheme1"
            app:title="@string/color_theme_selected_image"
            android:defaultValue="test"
            app:dependency="backgroundImageEnableTheme1"
            app:iconSpaceReserved="false"
            themeid="1"
            />

        <SwitchPreference
            app:key="backgroundImageTileTheme1"
            app:title="@string/repeat_tiled_image"
            android:defaultValue="false"
            app:iconSpaceReserved="false"
            app:dependency="backgroundImageEnableTheme1"
            />
    </PreferenceCategory>
    <PreferenceCategory app:title="Margins" app:iconSpaceReserved="false">
        <EditTextPreference
            app:key="marginTopTheme1"
            app:title="@string/marginTop"
            android:defaultValue="@string/default_margin_value"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true"
            />
        <EditTextPreference
            app:key="marginBottomTheme1"
            app:title="@string/marginBottom"
            android:defaultValue="@string/default_margin_value"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true"
            />
        <EditTextPreference
            app:key="marginRightTheme1"
            app:title="@string/marginRight"
            android:defaultValue="@string/default_margin_value"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true"
            />
        <EditTextPreference
            app:key="marginLeftTheme1"
            app:title="@string/marginLeft"
            android:defaultValue="@string/default_margin_value"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true"
            />

    </PreferenceCategory>

</PreferenceScreen>